@using SmartHomeWeb

<div>
    <h2>@TextResources.LogIn</h2>

    <form role="form" method="post" action="">
        <div class="form-group">
            <label for="user-input">@TextResources.LogIn</label>
            <input id="user-input" type="text" name="username" class="form-control"/>

            <label for="password-input">@TextResources.PersonPasswordLabel</label>
            <input id="password-input" type="password" name="password" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">@TextResources.Submit</button>
    </form>
</div>