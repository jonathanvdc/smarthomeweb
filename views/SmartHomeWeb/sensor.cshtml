@using System.Collections.Generic
@using Nancy.Security
@using SmartHomeWeb.Model
@using Nancy.ViewEngines.Razor
@inherits NancyRazorViewBase<IEnumerable<Sensor>>
@*                           ^^^^^^^^^^^^^^^^^^^    *@
@*                         This is the @Model type  *@

<h1>Sensor</h1>

<table class="table">

        <tr class="tableHeader">
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Description</th>
            <th>Notes</th>
        </tr>      
		
    @foreach (var p in @Model)
    {
        <tr>
	        <th>@p.Id</th>
	        <th>@p.Data.Name</th>
	        <td>@p.Data.LocationId </td>
	        <td>@p.Data.Description</td>
	        <td>@p.Data.Notes</td>
        </tr>
    }
</table>
