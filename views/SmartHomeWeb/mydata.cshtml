@using System.Collections.Generic
@using Nancy.Security
@using SmartHomeWeb.Model
@using Nancy.ViewEngines.Razor
@inherits NancyRazorViewBase<List<Locationextended>>
@*                           ^^^^^^^^^^^^^^^^^^^    *@
@*                         This is the @Model type  *@
<head>
    <!-- Bootstrap Core CSS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	
	<script type="text/javascript">
      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});
      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {
		var array = [];
		@foreach(var x in @Model[0].sensoren[0].sensoren)
		{
			@:var stamp = @x.ToJavascriptTimestamp();
			@:var date = new Date(stamp);
			@:var hmsstring = date.getHours() + ':' + ("0"+date.getMinutes());
			@:array.push([hmsstring, @x.MeasuredData]);
		}
        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Time');
        data.addColumn('number', 'Usage');
        data.addRows(array);

        // Set chart options
        var options = {'width':600,
                       'height':500};

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));

        chart.draw(data, options);
      }
	  
    </script>
	
	
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
<h1>Measurement</h1>

@if (@Model.Count == 0)
{
    <h2>Seems kind of lonely in here.</h2>
    <div>Maybe you should add a <a href="/add-has-location">location to your profile.</a></div>
}
else
{
    <div class="container col-sm-12">
        <ul class="nav nav-tabs col-sm-12">
		  <li class="active"><a data-toggle="tab" href="#0">@Model[0].location.Data.Name</a></li>
		  @for(var x = 1; x < @Model.Count; ++x)
			{
			  <li><a data-toggle="tab" href="#@x">@Model[@x].location.Data.Name</a></li>		
			}
		</ul>
		<div class="col-sm-8">
		<div id="chart_div"></div>
		</div>
		<div class="tab-content col-sm-4">
		
		
		  <div id="0"  class="tab-pane fade in active">
			<ul class="nav nav-pills nav-stacked">
			@foreach (var x in @Model[0].sensoren)
			{
			  <li><a href="#">@x.sensor.Data.Name</a></li>
			}
			</ul>
		  </div>
		  
			@for(var x = 1; x < @Model.Count; ++x)
			{
			  <div id="@x" class="tab-pane fade">
				<ul class="nav nav-pills nav-stacked">
					@foreach (var y in @Model[x].sensoren)
					{
					  <li><a href="#">@y.sensor.Data.Name</a></li>
					}
				</ul>
			  </div>	
			}
		</div>
    </div>
}
</body>
