@using System.Collections.Generic
@using Nancy.Security
@using Nancy.Session
@using SmartHomeWeb
@using SmartHomeWeb.Model
@using Nancy.ViewEngines.Razor
@inherits NancyRazorViewBase<IEnumerable<Person>>
@*                           ^^^^^^^^^^^^^^^^^^^    *@
@*                         This is the @Model type  *@

<h1>@TextResources.FriendsPageTitle</h1>
<h2>Add a friend</h2>

@if (Context.CurrentUser.IsAuthenticated())
{
    @Html.Partial("feedback-box.cshtml")

    <form method="post">
        <div class="form-group">
            <label for="friend">Friend username:</label>
            <input id="friend" name="friend-name" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Add friend</button>
    </form>
}
else
{
    <text>You must log in to view your friends.</text>
}

<h2>All friends</h2>
<table class="table">

        <tr class="tableHeader">
            <th>Username</th>
            <th>Name</th>
        </tr>

    @foreach (var p in @Model)
    {
        <tr>
            <th><a href="person=@p.Data.UserName">@p.Data.UserName</a></th>
	        <td>@p.Data.Name</td>
        </tr>
    }
</table>
