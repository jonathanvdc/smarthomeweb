@using System.Collections.Generic
@using Nancy.Security
@using Nancy.Session
@using SmartHomeWeb
@using SmartHomeWeb.Model
@using Nancy.ViewEngines.Razor
@inherits NancyRazorViewBase<dynamic>
@*                           ^^^^^^^^^^^^^^^^^^^    *@
@*                         This is the @Model type  *@

<h1>@TextResources.AddLocationPageTitle</h1>
@TextResources.AddLocationPageDescription

@if (Context.CurrentUser.IsAuthenticated())
{
    var error = (string)ViewBag.Error;
    if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">@(TextResources.Error):</span>
            @error
        </div>
    }

    var success = (string)ViewBag.Success;
    if (!string.IsNullOrEmpty(success))
    {
        <div class="alert alert-success" role="alert">
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        <span class="sr-only">@(TextResources.Success):</span>
            @success
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label for="location">@(TextResources.LocationNameLabel):</label>
            <input id="location" name="location-name" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">@TextResources.AddLocationButtonText</button>
    </form>
}
else
{
    <text>@TextResources.AddLocationNotAuthenticatedText</text>
}
